<div class="modal fade" id="cameraModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Verify Your Identity</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <p>Look at the camera to mark attendance for <b id="modal-subject-name"></b></p>
                <div style="width: 100%; height: 300px; background: #000; position: relative;">
                    <video id="video" autoplay style="width: 100%; height: 100%; object-fit: cover;"></video>
                </div>
                <div id="status-msg" class="mt-2 fw-bold"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary w-100" onclick="captureAndVerify()">Verify & Submit</button>
            </div>
        </div>
    </div>
</div>

<canvas id="canvas" style="display:none;"></canvas>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    let currentSessionId = null;
    const video = document.getElementById('video');
    const canvas = document.getElementById('canvas');
    const modal = new bootstrap.Modal(document.getElementById('cameraModal'));

    function openCamera(sessionId, subjectName) {
        currentSessionId = sessionId;
        document.getElementById('modal-subject-name').innerText = subjectName;
        document.getElementById('status-msg').innerText = "Waiting for camera...";
        modal.show();

        navigator.mediaDevices.getUserMedia({ video: true })
            .then(stream => { video.srcObject = stream; })
            .catch(err => { alert("Camera error!"); });
    }

    function captureAndVerify() {
        document.getElementById('status-msg').innerText = "Verifying... Please wait.";
        
        // Capture frame
        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;
        canvas.getContext('2d').drawImage(video, 0, 0);
        const imageData = canvas.toDataURL('image/jpeg');

        // Send to Django
        $.ajax({
            type: 'POST',
            url: '/verify_my_face/',
            data: {
                'image': imageData,
                'session_id': currentSessionId
            },
            success: function(response) {
                const msgBox = document.getElementById('status-msg');
                msgBox.innerText = response.message;
                
                if(response.status === 'success') {
                    msgBox.className = "mt-2 fw-bold text-success";
                    setTimeout(() => { modal.hide(); location.reload(); }, 2000);
                } else {
                    msgBox.className = "mt-2 fw-bold text-danger";
                }
            }
        });
    }
</script>

</body>
