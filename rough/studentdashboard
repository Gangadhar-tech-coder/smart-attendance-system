        <div class="col-md-8">
            <h4 class="mb-3">Live Classes</h4>
            
            {% for session in active_sessions %}
            <div class="card mb-3 shadow-sm border-primary">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-primary">{{ session.subject.name }}</h5>
                        <p class="mb-0 text-muted">Started by: {{ session.teacher.first_name }}</p>
                    </div>
                    <button class="btn btn-success" onclick="openCamera('{{ session.id }}', '{{ session.subject.name }}')">
                        Mark Attendance
                    </button>
                </div>
            </div>
            {% empty %}
            <div class="alert alert-warning">No live classes running right now.</div>
            {% endfor %}
        </div>
    </div>
